<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSQLite.Views.PersonPages">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://cdn-icons-png.flaticon.com/512/457/457559.png"
                   HeightRequest="200"
                   WidthRequest="200"
                   HorizontalOptions="CenterAndExpand"
                   Aspect="Fill"/>
            <Entry x:Name="txtCode" IsVisible="false"></Entry>
            <Label Text="NOMBRES"></Label>
            <Entry x:Name="txtFirstnames" Placeholder="Ingrese Sus Nombres"></Entry>

            <Label Text="APELLIDOS"></Label>
            <Entry x:Name="txtLastnames" Placeholder="Ingrese Sus Apellidos"></Entry>

            <Label Text="EDAD"></Label>
            <Entry x:Name="txtAge" Placeholder="Ingrese Su Edad" Keyboard="Numeric"></Entry>

            <Label Text="DIRECCION"></Label>
            <Entry x:Name="txtAddress" Placeholder="Ingrese Su Direccion"></Entry>

            <Label Text="CORREO"></Label>
            <Entry x:Name="txtEmail" Placeholder="Ingrese Su Correo" Keyboard="Email"></Entry>

            <Button x:Name="btnSavePerson" Text="SALVAR" Clicked="btnSavePerson_Clicked"></Button>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>